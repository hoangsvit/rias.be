{
    "name": "statamic/statamic",
    "description": "Statamic",
    "keywords": [
        "statamic",
        "cms",
        "flat file",
        "laravel"
    ],
    "type": "project",
    "require": {
        "php": "^8.0",
        "edalzell/blade-directives": "v3.5.2",
        "fideloper/proxy": "^4.0",
        "laravel/framework": "^8.0.4",
        "laravel/octane": "^1.0",
        "laravel/tinker": "^2.0",
        "nyholm/psr7": "^1.4",
        "predis/predis": "^1.1",
        "rias/statamic-color-swatches": "^2.0",
        "rias/statamic-markdown-highlight": "^v2.0.0",
        "rias/statamic-position-fieldtype": "2.0.1",
        "rias/statamic-redirect": "v2.x-dev",
        "spatie/browsershot": "^3.42",
        "spatie/laravel-discord-alerts": "^1.0.0",
        "spatie/laravel-feed": "^4.0.2",
        "spatie/laravel-medialibrary": "^9.4",
        "spatie/laravel-sitemap": "^6.0",
        "spatie/statamic-responsive-images": "v2.8.5",
        "spatie/temporary-directory": "^1.3",
        "statamic/cms": "v3.2.31",
        "stripe/stripe-php": "^7.68"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.5",
        "facade/ignition": "^2.5",
        "fakerphp/faker": "^1.13",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^5.2",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.10"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "spatie/laravel-ray"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "pre-update-cmd": [
            "Statamic\\Console\\Composer\\Scripts::preUpdateCmd"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan statamic:install --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "build": [
            "yarn production",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate",
            "@php please ssg:generate",
            "@php artisan sitemap"
        ]
    }
}
